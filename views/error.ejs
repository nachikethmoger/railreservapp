<!-- error.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Error</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }
        
        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }
        
        h1 {
            text-align: center;
        }
        
        .error-message {
            color: red;
            text-align: center;
            margin: 20px 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Error</h1>
        <p class="error-message">
            <%= error %>
        </p>
    </div>
</body>

</html>